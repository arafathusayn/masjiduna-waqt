{
  "name": "masjiduna-waqt",
  "version": "1.0.2",
  "description": "Pure TypeScript prayer time calculation library. Zero runtime dependencies. Sunni-only Meeus-based solar algorithms.",
  "license": "AGPL-3.0",
  "bin": {
    "waqt": "./dist/waqt.js"
  },
  "files": [
    "dist/index.js",
    "dist/index.cjs",
    "dist/index.d.ts",
    "dist/index.d.cts",
    "dist/waqt.js",
    "dist/preinstall.js"
  ],
  "type": "module",
  "sideEffects": false,
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "scripts": {
    "preinstall": "node -e \"const fs=require('fs'),cp=require('child_process');fs.existsSync('dist/preinstall.js')&&cp.spawnSync('node',['dist/preinstall.js'],{stdio:'inherit'})\"",
    "build:bin": "bun scripts/build-bin.ts",
    "build": "tsup && bun run build:bin",
    "prepublishOnly": "bun run build",
    "test": "bun test tests/unit/",
    "test:e2e": "bun test tests/e2e/",
    "test:all": "bun test tests/unit/ tests/e2e/ tests/dist-sanity/",
    "test:coverage": "bun test --coverage",
    "test:dist": "bun test tests/dist-sanity/",
    "typecheck": "bunx tsc --noEmit",
    "typecheck:dist": "bunx tsc --noEmit -p tsconfig.dist-sanity.json",
    "format": "oxfmt --write .",
    "format:check": "oxfmt --check ."
  },
  "dependencies": {},
  "devDependencies": {
    "@clack/prompts": "^1.0.1",
    "@types/bun": "latest",
    "chrono-node": "^2.9.0",
    "mitata": "^1.0.34",
    "oxfmt": "^0.35.0",
    "tsup": "^8.5.1"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
